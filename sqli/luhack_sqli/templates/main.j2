{% from "macros.j2" import with_errors %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Inject This!</title>
    </head>
    <body>
        <form method="POST" action="{{ request.url  }}">
            <fieldset>
                <legend>Login</legend>

                <div>
                    {{ form.user.label }}
                    {{ with_errors(form.user) }}
                </div>
                <div>
                    {{ form.password.label }}
                    {{ with_errors(form.password) }}
                </div>
                <div>
                    <button type="submit">Submit</button>
                </div>
            </fieldset>
        </form>
    </body>
</html>
